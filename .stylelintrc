{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-styled-components"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "apply",
          "tailwind",
          "components",
          "utilities",
          "screen"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "**/*.json",
    "**/*.md",
    "**/*.mdx",
    "packages/tokens/dist/**"
  ]
}
