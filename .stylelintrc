{
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "define-mixin",
          "mixin"
        ]
      }
    ],
    "custom-property-empty-line-before": "never",
    "no-eol-whitespace": null,
    "max-nesting-depth": 1,
    "selector-class-pattern": null
  }
}
