{
  "name": "@chanzuckerberg/eds-components",
  "version": "0.1.3",
  "description": "React components for the education design system",
  "keywords": [
    "design system",
    "components"
  ],
  "author": "CZI <edu-frontend-infra@chanzuckerberg.com>",
  "homepage": "https://github.com/chanzuckerberg/edu-design-system/tree/main/packages/components",
  "license": "MIT",
  "main": "lib/index.js",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chanzuckerberg/edu-design-system.git"
  },
  "files": [
    "lib",
    "tailwind.config.js"
  ],
  "scripts": {
    "build": "yarn run build:clean && yarn run build:js && yarn run build:styles && yarn run build:types && yarn run build:finish",
    "build:clean": "rm -rf lib/",
    "build:finish": "rm lib/**/*.spec.* lib/**/*.stories.*",
    "build:js": "babel src -d lib --extensions '.js,.jsx,.ts,.tsx'",
    "build:styles": "postcss \"src/**/*.css\" --dir lib/ --base src/ --verbose",
    "build:types": "tsc --project . --declaration --emitDeclarationOnly && ./generateFlowTypes.sh",
    "build:watch": "yarn run build:js --watch",
    "build:storybook": "build-storybook -o storybook-static",
    "deploy:docs": "storybook-to-ghpages --ci",
    "prepack": "yarn run build",
    "snapshot": "percy-storybook --widths=320,1280",
    "storybook": "start-storybook -p 6008",
    "storybook:axe": "yarn run build:storybook && yarn run storybook:axeOnly",
    "storybook:axeOnly": "axe-storybook --build-dir storybook-static",
    "start": "yarn run storybook",
    "test": "jest",
    "test:ci": "yarn run test --ci --coverage && cat ./coverage/lcov.info | codecov",
    "types": "tsc --noEmit"
  },
  "bugs": {
    "url": "https://github.com/chanzuckerberg/edu-design-system/issues"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "dependencies": {
    "@chanzuckerberg/eds-tokens": "^0.1.3",
    "clsx": "^1.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-modules-commonjs": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@chanzuckerberg/axe-storybook-testing": "^3.0.2",
    "@chanzuckerberg/story-utils": "^2.0.0",
    "@percy/storybook": "^3.3.1",
    "@storybook/addon-a11y": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.3.7",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.3.7",
    "@storybook/storybook-deployer": "^2.8.10",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.16",
    "autoprefixer": "^10.3.1",
    "axe-core": "^4.3.2",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "codecov": "^3.8.3",
    "core-js": "^3.16.1",
    "flowgen": "^1.14.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.6",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^6.7.0",
    "react": "^16.14.0",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.14.0",
    "storybook-css-modules-preset": "^1.1.1",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.3.5"
  }
}
