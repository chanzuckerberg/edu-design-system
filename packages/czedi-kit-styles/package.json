{
  "name": "@chanzuckerberg/czedi-kit-styles",
  "version": "0.0.0",
  "description": "Styles for czedi-kit components",
  "keywords": [
    "design system",
    "styles",
    "scss",
    "postcss"
  ],
  "author": "Devin Witherspoon <dcwither@gmail.com>",
  "homepage": "https://github.com/chanzuckerberg/lp-design-system/tree/master/packages/czedi-kit-styles#readme",
  "license": "UNLICENSED",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chanzuckerberg/lp-design-system.git"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:css",
    "build:clean": "rm -rf dist/",
    "build:css": "npx postcss src/*.scss src/*/[a-z\\-]*.scss --no-map --ext=css --dir=dist/ --base=src/",
    "lint": "npx stylelint src/",
    "lint:fix": "npm run lint -- --fix"
  },
  "bugs": {
    "url": "https://github.com/chanzuckerberg/lp-design-system/issues"
  },
  "dependencies": {
    "@chanzuckerberg/czedi-kit-tokens": "^0.0.0"
  },
  "devDependencies": {
    "@csstools/postcss-sass": "^4.0.0",
    "cssnano": "^4.1.10",
    "postcss-cli": "^6.1.3",
    "postcss-prefixer": "^2.1.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-scss": "^2.0.0",
    "stylelint": "^11.0.0",
    "stylelint-config-standard": "^19.0.0"
  }
}
