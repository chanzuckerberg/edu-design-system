{
  "name": "@chanzuckerberg/czedi-kit",
  "version": "0.0.0",
  "description": "Learning Platform Design System",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production lerna run build",
    "lint": "npm run lint:styles && npm run lint:scripts",
    "lint:fix": "npm run lint:styles:fix && npm run lint:scripts:fix",
    "lint:styles": "stylelint packages",
    "lint:styles:fix": "npm run lint:styles -- --fix",
    "lint:scripts": "eslint --ext=js,jsx,ts,tsx .",
    "lint:scripts:fix": "npm run lint:scripts -- --fix",
    "postinstall": "lerna bootstrap",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "start": "lerna run build && lerna run start --parallel"
  },
  "size-limit": [
    {
      "path": "packages/components/dist/**/*.js",
      "limit": "70KB",
      "webpack": false
    },
    {
      "path": "packages/styles/dist/all.css",
      "limit": "30KB",
      "webpack": false
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chanzuckerberg/lp-design-system.git"
  },
  "keywords": [
    "CZI",
    "Learning Platform"
  ],
  "author": "CZI",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/chanzuckerberg/lp-design-system/issues"
  },
  "homepage": "https://github.com/chanzuckerberg/lp-design-system#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/prompt-cli": "^8.3.5",
    "@size-limit/preset-small-lib": "^4.4.2",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "codecov": "^3.6.5",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-jest": "^22.19.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "lerna": "^3.18.3",
    "lint-staged": "^9.4.2",
    "prettier": "^2.0.5",
    "size-limit": "^4.4.2",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lerna run test --stream",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  }
}
