{
  "name": "@chanzuckerberg/eds",
  "version": "0.1.0-alpha.0",
  "description": "The React-powered design system library for Chan Zuckerberg Initiative education web applications",
  "author": "CZI <edu-frontend-infra@chanzuckerberg.com>",
  "homepage": "https://github.com/chanzuckerberg/edu-design-system",
  "license": "MIT",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "yarn build:tokens && yarn storybook",
    "build": "yarn dist",
    "build:tokens": "style-dictionary build",
    "build:icons": "make-dir dist/icons && svg-sprite-generate -d src/icons/ -o dist/icons/spritemap.svg",
    "build:js": "babel src/design-tokens/components --out-dir dist --copy-files",
    "build:css": "postcss \"src/**/*.css\" --dir dist/ --base src/ --verbose",
    "dist": "yarn dist.clear && yarn build:css && yarn copy-to-dist && tsc",
    "dist.clear": "del-cli dist",
    "dist.build": "run-p build:icons build:js",
    "dist.clean": "del-cli dist/**/*.stories.tsx dist/design-tokens dist/**/*.css.map dist/*.*",
    "copy-to-dist": "copyfiles -u 1 src/fonts/* src/static/* src/icons/**/* dist",
    "create-component": "plop",
    "lint": "yarn run lint:styles && yarn run lint:scripts",
    "lint:fix": "yarn run lint:styles:fix && yarn run lint:scripts:fix",
    "lint:styles": "stylelint --ignore-path .gitignore src/**/*.css",
    "lint:styles:fix": "yarn run lint:styles --fix",
    "lint:scripts": "eslint --ignore-path .gitignore --ext=js,jsx,ts,tsx .",
    "lint:scripts:fix": "yarn run lint:scripts --fix",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "plop": "plop component",
    "plop:page": "plop page",
    "plop:recipe": "plop recipe",
    "test": "jest",
    "types": "tsc --noEmit",
    "version": "./scripts/updateYarnLockForLerna.sh"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "downshift": "^6.1.7",
    "nanoid": "^3.3.1",
    "react-children-by-type": "^1.1.0",
    "react-focus-lock": "^2.8.1",
    "react-portal": "^4.2.1",
    "svg4everybody": "^2.1.9"
  },
  "entry": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@chanzuckerberg/eslint-plugin-stories": "^3.0.1",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/prompt-cli": "^16.2.1",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "@types/estree": "^0.0.51",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.6",
    "eslint-plugin-testing-library": "^5.0.5",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "plop": "^3.0.5",
    "prettier": "^2.5.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "size-limit": "^4.12.0",
    "stylelint": "^14.5.3",
    "stylelint-config-standard": "^25.0.0",
    "typescript": "^4.5.5",
    "web-vitals": "^2.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "packageManager": "yarn@3.1.1"
}
