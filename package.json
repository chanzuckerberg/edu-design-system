{
  "name": "edu-design-system",
  "private": true,
  "description": "Learning Platform Design System",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "NODE_ENV=production yarn workspaces foreach --interlaced --parallel --topological --verbose run build",
    "build:clean": "yarn workspaces foreach --exclude eds-tokens run build:clean",
    "create-component": "plop",
    "create-releases": "yarn create-releases:conventional patch",
    "create-releases:alpha": "yarn create-releases:conventional --preid alpha prerelease",
    "create-releases:breaking": "yarn create-releases:conventional minor",
    "create-releases:conventional": "lerna version --no-push --conventional-commits --message 'chore(release): %s'",
    "generateFlowTypes": "./packages/components/generateFlowTypes.sh",
    "lint": "yarn run lint:styles && yarn run lint:scripts",
    "lint:fix": "yarn run lint:styles:fix && yarn run lint:scripts:fix",
    "lint:styles": "stylelint --ignore-path .gitignore packages/**/*.{css,js,jsx,ts,tsx}",
    "lint:styles:fix": "yarn run lint:styles --fix",
    "lint:scripts": "eslint --ignore-path .gitignore --ext=js,jsx,ts,tsx .",
    "lint:scripts:fix": "yarn run lint:scripts --fix",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "publish-releases": "lerna publish from-git --no-push",
    "publish-releases:alpha": "yarn publish-releases --dist-tag alpha",
    "start": "yarn workspaces foreach --interlaced --parallel --verbose run start",
    "test": "yarn workspaces foreach run test",
    "types": "yarn workspaces foreach run types",
    "version": "./scripts/updateYarnLockForLerna.sh"
  },
  "size-limit": [
    {
      "path": "packages/components/lib/**/*([a-zA-Z-_]).js",
      "limit": "70KB",
      "name": "components",
      "webpack": false
    },
    {
      "path": "packages/components/lib/**/*([a-zA-Z-_]).css",
      "limit": "70KB",
      "name": "styles",
      "webpack": false
    }
  ],
  "author": "CZI",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@commitlint/prompt-cli": "^11.0.0",
    "@size-limit/preset-small-lib": "^4.12.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^5.0.0",
    "husky": "^4.3.8",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "plop": "^2.7.4",
    "prettier": "^2.3.2",
    "size-limit": "^4.12.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "stylelint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "packageManager": "yarn@3.0.2"
}
