{
  "name": "@chanzuckerberg/czedi-kit",
  "version": "0.0.0",
  "description": "Learning Platform Design System",
  "main": "index.js",
  "scripts": {
    "lint": "npm run lint:styles && npm run lint:scripts",
    "lint:fix": "npm run lint:styles:fix && npm run lint:scripts:fix",
    "lint:styles": "stylelint packages",
    "lint:styles:fix": "npm run lint:styles -- --fix",
    "lint:scripts": "eslint --ext=js,jsx,ts,tsx .",
    "lint:scripts:fix": "npm run lint:scripts -- --fix",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chanzuckerberg/lp-design-system.git"
  },
  "keywords": [
    "CZI",
    "Learning Platform"
  ],
  "author": "CZI",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/chanzuckerberg/lp-design-system/issues"
  },
  "homepage": "https://github.com/chanzuckerberg/lp-design-system#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-jest": "^22.19.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.0.9",
    "lerna": "^3.18.3",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "stylelint": "^11.0.0",
    "stylelint-config-standard": "^19.0.0",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  }
}
